<launch>

  <!-- Load your robot -->
  <arg name="robot" default="urdf_tutorial"/>

  <param name="description_package" command="$(find xacro)/xacro.py '$(find description_package)/robots/$(arg robot).urdf.xacro'" />

  <!-- Send gui-ed joint values -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="TRUE"/>
  </node>

  <!-- Build your robot tf tree -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

  <!-- Show in Rviz   -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find description_package)/launch/rrbot.rviz"/>

</launch>
